@page
@model Client.Pages.Admin.ChapterManage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chapter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Chapter.ChapterId" />
            <div class="form-group">
                <label asp-for="Chapter.StoryId" class="control-label"></label>
                <select asp-for="Chapter.StoryId" class="form-control" asp-items="ViewBag.StoryId"></select>
                <span asp-validation-for="Chapter.StoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chapter.ChapterNumber" class="control-label"></label>
                <input asp-for="Chapter.ChapterNumber" class="form-control" />
                <span asp-validation-for="Chapter.ChapterNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chapter.Title" class="control-label"></label>
                <input asp-for="Chapter.Title" class="form-control" />
                <span asp-validation-for="Chapter.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chapter.Content" class="control-label"></label>
                <textarea id="chapterContent" asp-for="Chapter.Content" class="form-control"></textarea>
                <span asp-validation-for="Chapter.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="./Index">Back to List</a>
</div>

