@page
@model Client.Pages.Admin.ChapterManage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Chapter[0].ChapterNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chapter[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chapter[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chapter[0].Story)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Chapter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChapterNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Story.Title)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ChapterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ChapterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ChapterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
